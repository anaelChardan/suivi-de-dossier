{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/@types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "public",
    "/**/*.test.ts",
    "src/swagger.ts",
    "src/@types/*"
  ]
}
